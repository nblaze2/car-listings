
<h1 class="table-title">Cars</h1>

<table>
  <thead>
    <tr>
      <th>Manufacturer</th>
      <th>Model</th>
      <th>Color</th>
      <th>Year</th>
      <th>Mileage</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td><strong><%= car.manufacturer.name %></strong></td>
        <td><strong><%= car.model %></strong></td>
        <td><%= car.color %></td>
        <td><%= car.year %></td>
        <td><%= car.mileage %></td>
        <td><%= car.description %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="new-car">
  <%= link_to 'Add a Car', new_car_path %>
</div>
<%= link_to 'Manufacturers', manufacturers_path %>
