
<h1 class="table-title">Manufacturers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Country</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @manufacturers.each do |manufacturer| %>
      <tr>
        <td><strong><%= manufacturer.name %></strong></td>
        <td><%= manufacturer.country %></td>
        <td><%= link_to 'Details/Cars', manufacturer %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="new-manufacturer">
  <%= link_to 'Add a Manufacturer', new_manufacturer_path %>
</div>

